<h1>Create Super Hero:</h1>

<% if @superhero.errors.full_messages %>
  <% @superhero.errors.full_messages.each do |error| %>
    <p><%=error %></p>
  <% end %>
<% end %>

<%= form_for(@superhero) do |f| %>
<h3><label>Name</label></h3><br>
<%= f.text_field :name %>
<h3><label>Super name</label></h3><br>
<%= f.text_field :super_name %>
<h3><label>Super power</label></h3><br>
<%= f.collection_select :superpower_id, Superpower.all, :id, :name %>
<%= f.submit "Create Superhero" %>
<% end %>
