<h1>New Superhero</h1>



<% if @superhero.errors.any? %>
  <% @superhero.errors.full_messages.each do |m| %>
    <p><%= m %></p>
  <% end %>
<% end %>


<%= form_for @superhero do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br></br>
<%= f.label :super_name %>
<%= f.text_field :super_name %>
<br></br>
<%= f.label :superpower_id %>
<%= f.collection_select(:superpower_id, Superpower.all, :id, :name) %>
<br></br>
<%= f.submit "Create Superhero" %>
<% end %>
