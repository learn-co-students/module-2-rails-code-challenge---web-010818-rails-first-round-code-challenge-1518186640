<h2>All Superheroes</h2>

<h3>Search By Superpower:</h3>
<%= form_tag(superheroes_path, method: :get) do %>
  <%= text_field_tag :term, params[:term], :autocomplete => :on %>
  <%= submit_tag 'Search' %>
<% end %>

<ul>
  <% @superheroes.each do |superhero| %>
    <li>
      <%= link_to superhero.super_name, superhero_path(superhero) %>
    </li>
    <br>
  <% end %>
</ul>
