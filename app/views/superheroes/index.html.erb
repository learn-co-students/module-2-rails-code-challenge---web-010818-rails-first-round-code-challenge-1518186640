<h2>All Superheroes</h2>

<ul>
  <% @superheroes.each do |superhero| %>
    <li>
        <%= link_to superhero.super_name, superhero_path(superhero)%>
    </li>
    <br>
  <% end %>
</ul>
<br>
<br>


<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search by a superpower id:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
<ul>
  <% @superpowers.each do |superpower| %>
    <li>
        <%= "#{superpower.id} - #{superpower.name}"%>
    </li>
    <br>
  <% end %>
</ul>




