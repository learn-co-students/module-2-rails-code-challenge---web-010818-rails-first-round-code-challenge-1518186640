<h1>All Superheroes</h1>

<%= image_tag "https://img.cinemablend.com/cb/1/2/d/c/d/5/12dcd57724f3c02e6f802dda3d56bd09996e236b062a2214f7c97c3e3f17a690.jpg"%>

<h3> Search by Superpower</h3>

<%= form_tag superheroes_path, method: :get do%>
  <%= search_field_tag :search %>
  <%= submit_tag "Search" %>
<% end %>
<%= link_to "Show All Superheroes", superheroes_path %>
<br></br>
<ul>
  <% @superheroes.each do |superhero| %>
    <li>
      <%= link_to superhero.super_name, superhero_path(superhero)  %>
    </li>
    <br>
  <% end %>
</ul>

<%= link_to "Create New Superhero", new_superhero_path %>
